<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/recyclerview_selector"
    android:clickable="true"

    android:layout_height="wrap_content">


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textStyle="bold"
            android:id="@+id/PendAppId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            />

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:id="@+id/PendAppParagogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        ></LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textStyle="bold"
            android:id="@+id/PendAppQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            />

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:id="@+id/PendAppPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        ></LinearLayout>



    <TextView
        android:textStyle="bold"
        android:id="@+id/PendAppTransDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/PendAppABO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/PendAppRh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>


</LinearLayout>